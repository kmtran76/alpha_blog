<h1>Articles listing view</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <%@articles.each do |article| %>
      <tr>
        <th><%=article.title%></th>
        <th><%=article.description%></th>
        <th><%=link_to 'Show', article_path(article)%></th>
        <th><%=link_to 'Delete', article_path(article), method: :delete%></th>
      </tr>
    <%end%>
  </tbody>
</table>