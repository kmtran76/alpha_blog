<h1 class="text-center mt-4">Alpha Bloggers</h1>

<!-- <%= will_paginate @articles %>  Replace with the better styling below -->
<div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
</div>

<div class="container">
  <%@users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">

        <%# Using bootstrap card%>
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">

            <!-- <%= link_to user.username, user_path(user) %> -->
            <!-- the user_path(user) above can we write short as user rails smart enough
                 to form the link-->
            <%= link_to user.username, user %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to gravatar_for(user, size: 150), user %>
            </h5>
            <!-- Note: pluralize() is a rail method-->
            <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
            <%= link_to "View profile", user, class: "btn btn-outline-success" %>
            <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-outline-info" %>           
          </div>
          <div class="card-footer text-muted">
            <%# handy method (time_ago_in_words) rails provides to format date, more user friendly%>
            <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
          </div>

        </div>
      </div>
    </div>
    
  <% end %>
</div>


