<h1 class="text-center mt-4">Categories</h1>

<!-- <%= will_paginate @articles %>  Replace with the better styling below -->
<div class="flickr_pagination">
  <!-- Note: :container => false is part of the flickfr_pagination 
      http://mislav.github.io/will_paginate

      Also need to update the controller for this to work
  -->
  <%= will_paginate @categories, :container => false %>        
</div>

<div class="container">
  <%@categories.each do |category| %>
    <div class="row justify-content-md-center">
      <div class="col-4 mt-4">

        <%# Using bootstrap card%>
        <div class="card text-center shadow mb-5 bg-white rounded">
          
          <div class="card-body">
            <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success" %></h5>
            <!-- Note: pluralize() is a rail method-->
            <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
          </div>
          <div class="card-footer text-muted">
            <%# handy method (time_ago_in_words) rails provides to format date, more user friendly%>
            <small>Created <%= time_ago_in_words(category.created_at) %> ago, 
            edited <%= time_ago_in_words(category.updated_at) %> ago</small>
          </div>

        </div>

      </div>
    </div>    
  <% end %>
</div>

<div class="flickr_pagination mb-4">
  <%= will_paginate @categories, :container => false %>
</div>