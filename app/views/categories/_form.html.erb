<!-- Notice we reference errors partial file under /shared folder -->
<!-- Since the errors partial is shared between articles form and users form
      we also define what obj would be render from here -->
<%= render 'shared/errors', obj: @category %>  

<%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f|%>
  <div class="form-group row">
    <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
    <div class="col-10">
      <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
    </div>
  </div>

  <div class="form-group row justify-content-center">
    <!-- <%= f.submit "Sign up", class: "btn btn-outline-light btn-lg" %> -->
    <%= f.submit class: "btn btn-outline-light btn-lg" %>
  </div>
<%end%>